.content{
    padding:0 18px; 
}
.top{
    padding:10px 0;
    border-bottom: 1px solid #f3f3f3;
    box-shadow: border-box;
}
.login image{
   width: 40px;
   height: 40px; 
   border-radius: 20px;
   float:left;
}
.login text{
    height: 40px;
    line-height: 40px;
    color:#aaa;
    font-size: 15px;
    padding-left: 10px;
}
.edit, .photo{
    width: 40px;
    float: right;
    height: 40px;
    text-align: center;
}
.edit image, .photo image{
    width: 24px;
    height: 24px;
    margin-top: 8px;
}
