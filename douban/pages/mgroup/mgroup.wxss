.top{
    background: #f6f5f2;
    padding:8px;
    padding-bottom: 0;
}
.search{
    position: relative;
    display: block;
}
.search input{
    background: #fff;
    font-size:11px;
    padding-left:10px;
}
.search view{
    position: absolute;
    top:0;
    right:0;
    width: 24px;
    height:26px;
    text-align: center;
}
.search icon{
    position: absolute;
    top: 8px;
    right: 8px;
}
.top-select{
    padding: 10px 0;
    border-bottom:1px solid #e9e6e3
}
.top-select navigator{
    display: inline-block;
}
.top-select image{
    width: 100px;
    height: 23px;
}
.top-select button{
    display: inline-block;
    font-size: 15px;
    font-weight: bold;
    padding-left: 9px;
    padding-right: 9px;
    line-height: 1.81;
    margin-left: 10px;
    background-color:#e0deda;
    border-radius:5px; 
}
.top-kind{
    padding: 6px 4px;
}
.top-kind view{
    display: inline-block;
    color: #643;
    font-size: 14px;
    margin-right: 15px;
}
.content{
    padding: 0 8px;
}
.area-kind{
    margin: 10px 0;
    font-size: 15px;
}
.area-list view{
    display: inline-block;
    margin-right: 8px;
    font-size: 14px;
}
.area-list .name{
    color: #37a;
}
.section{
    margin:8px;
}
.kind-title{
    font-size:14px;
    border-bottom:1px dashed #e9e6e3;
    padding: 8px 0;
}
.item-img img{
    width: 88px;
    height: 130px;
}
.item-text{
    color:#37a;
    font-size: 13px;
    height: 26px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    white-space: normal;
    padding: 0;
    margin-top: 10px;
}
.cont{
    margin-top: 10px;
}
.scroll-view-item{
    margin-right: 25px;
}
.kind-view{
    background: #f6f5f2;
    display: flex;
    padding:15px 10px;
}
.kind-item{
    flex: 1;
    text-align: center;
}
.item-title{
    color: #643;
    font-size: 14px;
    margin-bottom:10px;
}
.item-title span{
    font-size: 10px;
    margin-left: 2px;
}
.item-cont{
    color: #37a;
    font-size: 12px;
}
.item-cont view{
    margin: 6px auto;
}
.kind-nav{
    padding: 5px 0;
    border-bottom:1px dashed #e9e6e3;
}
.kind-nav view{
    display: inline-block;
}
.nav-kind{
    font-size: 14px;
    margin-right: 20px;
}
.nav-detail{
    font-size: 12px;
    color: #37a;
    margin: 0 8px;
}
.cont-img{
    float: left;
    width: 70px;
}
.cont-img image{
    width: 70px;
    height: 104px;
}
.cont-text{
    margin-left:85px;
}
.text-title{
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 13px;
    color: #37a;
    text-overflow: ellipsis;
    line-height: 1.3;
    margin-bottom: 6px;
}
.text-time, .text-address, .text-watch{
    font-size: 12px;
    color: #666;
    height: 18px;
    line-height: 18px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
}
.cont-wrapper{
    margin: 10px 0;
}
.cont-wrapper:after{
    display: block;
    content: '';
    height: 0;
    visibility: hidden;
    clear: both;
}