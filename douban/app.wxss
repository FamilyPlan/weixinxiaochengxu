Page{
  background: #fff;
}
.container {
  box-sizing: border-box;
} 
.scroll-view-item{
  display: inline-block;
  width: 100px;
  margin-right:10px;
}
.item-img image{
  width: 96px;
  height: 155px;
}
.item-text{
  text-align: center;
  padding: 5px;
  overflow: hidden;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.win, .grey{
  display:inline-block;
  width:10px;
  height:10px;
  background-size:10px 10px;
  margin-right:1px;
  background-color:transparent;
  background-repeat:no-repeat;
}
.win{
  background-image:url("data:image/png;base64,");
}
.grey{
  background-image:url("data:image/png;base64,");
}
.item-score{
  margin-top: -4px;
  text-align: center;
}
.score{
  margin-left:3px; 
  color: #aaa;
  font-size: 12px;
}
.in-block{
  display: inline-block;
}
.scroll-view_H{
  white-space: nowrap;
}